<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/large_margin"
    android:layout_marginLeft="@dimen/middle_margin"
    android:layout_marginRight="@dimen/middle_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.romariomkk.yelpproject.ui.BusinessDetailActivity"
    tools:showIn="@layout/activity_business_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/middle_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/open_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small_middle"/>

            <RatingBar
                android:id="@+id/rating_bar"
                android:isIndicator="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Light.RatingBar"
                android:numStars="5"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <TextView
            android:id="@+id/bus_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/middle_margin"
            android:layout_marginBottom="@dimen/middle_margin"
            android:clickable="true"
            android:text="@string/site_text"
            android:textColorLink="@android:color/holo_purple"
            android:textSize="@dimen/font_small_middle"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/middle_margin"
            android:text="@string/categories"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_middle"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/categories_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_small_middle"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
